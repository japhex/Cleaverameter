<header>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/"><% if (clientName != null) { %><%= clientName %><% } %></a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/client/parameters">Parameters</a>
                    </li>
                </ul>
            </div>
            <div class="justify-content-end header-form">
                <form method="post" action="/client/set-context">
                    <select class="form-control" id="clientId" name="clientId">
                        <% for(var i=0;i < clients.length; i++) { %>
                            <option value="<%= clients[i].id %>"><%= clients[i].name %></option>
                        <% } %>
                    </select>
                    <button class="form-control btn btn-light">Set client</button>
                </form>
            </div>
        </div>
    </nav>
</header>

<!-- Client sub-header -->
<header class="sub-header sub-header__client-details bg-dark">
    <nav class="navbar navbar-light">
        <div class="container">
            <div class="sub-header__version">
                <small><strong>FCP Version:</strong> <%= clientVersion %></small> |
                <small><strong>Current Release:</strong> <%= currentRelease %></small> |
                <small><strong>Label:</strong> <%= fcpLabel %></small> |
                <small>
                    <strong>Build status:</strong>
                    <% if (buildStatus === 'successful') { %>
                        <i class="sub-header__status sub-header__status--success material-icons">cloud_done</i>
                    <% } else { %>
                        <i class="sub-header__status sub-header__status--failed material-icons">cloud_off</i>
                    <% } %>
                </small>
            </div>
        </div>
    </nav>
</header>

<!-- Client sub-header -->
<header class="sub-header sub-header__client-actions sticky-header">
    <nav class="navbar navbar-light">
        <div class="container">
            <span></span>
            <div class="justify-content-end">
                <a href="/client/parameters" class="btn btn-dark btn-sm">Reset Filters</a>
                <button type="button" class="btn btn-success btn-sm">Export</button>
            </div>
        </div>
    </nav>
</header>
